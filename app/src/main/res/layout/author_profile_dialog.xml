<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/author_profile_layout"
    android:theme="@style/Theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <TextView
        android:id="@+id/author_profile_user_name_view"
        style="@style/AuthorProfileTitle"
        android:text="@string/authorname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/author_profile_user_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_icon_pitch"
        app:layout_constraintBottom_toBottomOf="@+id/author_profile_user_name_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_user_name_view"
        android:contentDescription="@string/user_profile_icon" />

    <ImageView
        android:id="@+id/author_ratio_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/laurels_color"
        app:layout_constraintBottom_toBottomOf="@+id/author_profile_rating_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_rating_label"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/laurel_wreath_icon" />

    <TextView
        android:id="@+id/author_profile_rating_label"
        style="@style/AuthorProfileLabel"
        android:text="@string/rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_profile_user_name_view" />

    <TextView
        android:id="@+id/author_profile_rating_view"
        style="@style/AuthorProfileValue"
        android:text="@string/_5_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_rating_label" />

    <ImageView
        android:id="@+id/author_profile_story_count_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookwithmark_color"
        app:layout_constraintBottom_toBottomOf="@+id/author_profile_story_count_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_story_count_label"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/book_with_bookmark_icon" />

    <TextView
        android:id="@+id/author_profile_story_count_label"
        style="@style/AuthorProfileLabel"
        android:text="@string/published"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_profile_rating_label" />

    <TextView
        android:id="@+id/author_profile_story_count_view"
        style="@style/AuthorProfileValue"
        android:text="@string/_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_story_count_label" />

    <ImageView
        android:id="@+id/author_profile_love_count_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_solid_color"
        app:layout_constraintBottom_toBottomOf="@+id/author_profile_love_count_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_love_count_label"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/heart_icon" />

    <TextView
        android:id="@+id/author_profile_love_count_label"
        style="@style/AuthorProfileLabel"
        android:text="@string/all_loves"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_profile_story_count_label" />

    <TextView
        android:id="@+id/author_profile_love_count_view"
        style="@style/AuthorProfileValue"
        android:text="@string/_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_love_count_label" />

    <ImageView
        android:id="@+id/author_profile_follower_count_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/people_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_follower_count_label"
        app:layout_constraintBottom_toBottomOf="@+id/author_profile_follower_count_label"
        android:contentDescription="@string/person_being_followed_icon"/>

    <TextView
        android:id="@+id/author_profile_follower_count_label"
        style="@style/AuthorProfileLabel"
        android:text="@string/followers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_profile_love_count_label" />

    <TextView
        android:id="@+id/author_profile_follower_count_view"
        style="@style/AuthorProfileValue"
        android:text="@string/_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/author_profile_follower_count_label" />

    <Button
        android:id="@+id/authorProfileFollowButton"
        style="@style/PrimaryButton"
        android:text="@string/follow"
        app:layout_constraintEnd_toEndOf="@+id/author_profile_follower_count_view"
        app:layout_constraintStart_toStartOf="@+id/author_profile_follower_count_image"
        app:layout_constraintTop_toBottomOf="@+id/author_profile_follower_count_label" />

    <Button
        android:id="@+id/authorProfileStoriesButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/author_s_tailes"
        app:layout_constraintEnd_toEndOf="@+id/authorProfileFollowButton"
        app:layout_constraintStart_toStartOf="@+id/authorProfileFollowButton"
        app:layout_constraintTop_toBottomOf="@+id/authorProfileFollowButton" />

</androidx.constraintlayout.widget.ConstraintLayout>