<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/off_white</item>
        <item name="colorPrimaryDark">@color/pitch</item>
        <item name="colorAccent">@color/pitch</item>
        <item name="colorPrimaryVariant">@color/pitch</item>
        <item name="colorOnPrimary">@color/pitch</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pitch</item>
        <item name="colorSecondaryVariant">@color/light_slate</item>
        <item name="colorOnSecondary">@color/off_white</item>

        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:actionMenuTextColor">@color/pitch</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/off_white</item>
        <item name="android:statusBarColor">@color/pitch</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/pitch</item>
        <item name="android:textColorPrimary">@color/pitch</item>
        <item name="android:textColorSecondary">@color/pitch</item>
    </style>

    <style name="Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>