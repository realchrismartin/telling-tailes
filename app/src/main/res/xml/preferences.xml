<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <SwitchPreferenceCompat
            android:key="@string/setting_hide_title"
            android:title="@string/setting_hide_title"
            android:summary="@string/setting_hide_description"
            android:icon="@drawable/bell_outline_pitch"
            android:defaultValue="true"
            />

        <SeekBarPreference
            android:key="@string/setting_text_size_title"
            android:title="@string/setting_text_size_title"
            android:summary="@string/setting_text_size_description"
            android:min="10"
            android:max="50"
            android:defaultValue="25"
            android:icon="@drawable/text_pitch"
            />

        <EditTextPreference
            android:key="@string/setting_password_title"
            android:title="@string/setting_password_title"
            android:summary="@string/setting_password_description"
            android:inputType="textPassword"
            android:icon="@drawable/key_pitch"
            />

        <Preference
            android:key="@string/setting_logout_title"
            android:title="@string/setting_logout_title"
            android:summary="@string/setting_logout_description"
            android:icon="@drawable/logout_pitch"
            />

</PreferenceScreen>